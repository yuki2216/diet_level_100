<div class="contents">
  <div class="big-left">
      <div class="card">
        <div class="gallery" style="background-image: url(<%= @diary.breakfast_image %>);"></div>
        <div class="card-right">
          <div class="top-wapper">
            <div class="index-day"><%= @diary.day %>日目</div>
            <div class="index-weight">体重<%= @diary.weight %>kg</div>
          </div>
          <div class="middle-wapper">
            <div class="middle-wapper-left">
              <div class="exercise">運動</div>
              <div class="comment">コメント</div>
            </div>
            <div class="middle-wapper-right">
              <div class="exercise-text">
                <span><%= @diary.exercise %></span>
              </div>
              <div class="comment-text">
                <span><%= @diary.comment %></span>
              </div>
            </div>
          </div>
          <div class="low-wapper">
            <div class="low-wapper-right">
              <% if user_signed_in? && current_user.id == @diary.user_id %>
                <%= link_to '編集', edit_diary_path(@diary.id), method: :get %>
                <%= link_to '削除', "/diaries/#{@diary.id}", method: :delete %>
              <% end %>
              <a href="/users/<%= @diary.user.id %>">
                <span>投稿者</span><%= @diary.user.nickname %>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="container">
        <% if user_signed_in? %>
          <%= form_with(model: [@diary, @comment], local: true) do |form| %>
            <%= form.text_area :text, placeholder: "コメントする", rows: "2" %>
            <%= form.submit "SEND" %>
          <% end %>
        <% else %>
          <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
        <% end %>
        <div class="comments">
          <h4>＜コメント一覧＞</h4>
          <% @comments.each do |comment| %>
            <p>
              <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}" %>：</strong>
              <%= comment.text %>
            </p>
          <% end %>
        </div>
      </div>
  </div>

  <div class="big-right">
    level
  </div>
</div>